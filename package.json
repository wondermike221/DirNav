{
  "name": "solid-dirnav-ui",
  "version": "1.0.0",
  "description": "A comprehensive directory navigation UI component built with SolidJS, featuring keyboard shortcuts, command palette, and shadow DOM isolation",
  "main": "dist/solid-dirnav-ui.umd.js",
  "module": "dist/solid-dirnav-ui.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/solid-dirnav-ui.es.js",
      "require": "./dist/solid-dirnav-ui.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/solid-dirnav-ui.git"
  },
  "homepage": "https://github.com/username/solid-dirnav-ui#readme",
  "bugs": {
    "url": "https://github.com/username/solid-dirnav-ui/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && vite build && npm run build:types",
    "build:lib": "vite build",
    "build:types": "node -e \"require('fs').copyFileSync('src/types-template.d.ts', 'dist/index.d.ts')\"",
    "clean": "rimraf dist",
    "dev": "vite",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug"
  },
  "keywords": [
    "solidjs",
    "navigation",
    "ui-component",
    "directory",
    "keyboard-shortcuts",
    "command-palette",
    "shadow-dom",
    "typescript"
  ],
  "author": "DirNav Contributors",
  "license": "ISC",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "playwright": "^1.53.2",
    "rimraf": "^6.0.1",
    "solid-js": "^1.9.7",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.7"
  },
  "peerDependencies": {
    "solid-js": "^1.9.0"
  }
}
